    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "ts-node-dev",
            "runtimeArgs": [
                "--inspect=8048",
                "--respawn",
                "--transpile-only"
            ],
            "program": "${workspaceRoot}/examples/test.ts",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "outputCapture": "std"
        },
    ]
}